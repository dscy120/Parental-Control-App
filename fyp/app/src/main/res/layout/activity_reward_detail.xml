<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/RewardMainTheme_Blue_1"
    tools:context=".reward.RewardDetailActivity">

    <TextView
        android:id="@+id/textView_dialog_item_name"
        style="@style/dialog_item_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.077" />

    <Button
        android:id="@+id/button_add_item_quantity"
        style="@style/dialog_item_style"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/add_circle_outline_24px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.317"
        app:layout_constraintStart_toEndOf="@+id/textView_dialog_item_quantity"
        app:layout_constraintTop_toBottomOf="@+id/textView_dialog_required_points"
        app:layout_constraintVertical_bias="0.132" />

    <TextView
        android:id="@+id/textView_dialog_item_quantity"
        style="@style/dialog_item_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="quantity"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_dialog_required_points"
        app:layout_constraintVertical_bias="0.144" />

    <Button
        android:id="@+id/button_reduce_item_quantity"
        style="@style/dialog_item_style"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/remove_circle_outline_24px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView_dialog_item_quantity"
        app:layout_constraintHorizontal_bias="0.654"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_dialog_required_points"
        app:layout_constraintVertical_bias="0.13" />

    <TextView
        android:id="@+id/textView_dialog_required_points"
        style="@style/dialog_item_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="points"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_effective_time"
        app:layout_constraintVertical_bias="0.063" />

    <Button
        android:id="@+id/button_purchase"
        style="@style/dialog_item_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy now"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_dialog_item_quantity"
        app:layout_constraintVertical_bias="0.205" />

    <TextView
        android:id="@+id/textView_effective_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_dialog_item_name"
        app:layout_constraintVertical_bias="0.08" />

</androidx.constraintlayout.widget.ConstraintLayout>