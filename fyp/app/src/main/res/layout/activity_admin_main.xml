<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="40dp"
    android:background="@color/AdminMainTheme_Orange_1"
    tools:context=".admin.ParentMainActivity">

    <Button
        android:id="@+id/button_timeSettings"
        android:layout_width="329dp"
        android:layout_height="81dp"
        android:background="@drawable/card_green"
        android:drawableLeft="@drawable/lock_clock_24px"
        android:paddingLeft="30dip"
        android:paddingRight="26dip"
        android:text="Screen Time Settings"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.103" />

    <Button
        android:id="@+id/button_appSelect"
        android:layout_width="329dp"
        android:layout_height="81dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/card_green"
        android:drawableLeft="@drawable/apps_24px"
        android:paddingLeft="30dip"
        android:paddingRight="26dip"
        android:text="App Selection"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_timeSettings"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Page"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.085" />

    <Button
        android:id="@+id/button_set_reward_point"
        android:layout_width="329dp"
        android:layout_height="81dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/card_green_4"
        android:drawableLeft="@drawable/school_24px"
        android:paddingLeft="30dip"
        android:paddingRight="26dip"
        android:text="Set Reward Point"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_appSelect"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_question_setting"
        android:layout_width="329dp"
        android:layout_height="81dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/card_green_2"
        android:drawableLeft="@drawable/school_24px"
        android:paddingLeft="30dip"
        android:paddingRight="26dip"
        android:text="Question Bank"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_reward_item_setting"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_reward_item_setting"
        android:layout_width="329dp"
        android:layout_height="81dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/card_green_4"
        android:drawableLeft="@drawable/card_giftcard_24px"
        android:paddingLeft="30dip"
        android:paddingRight="26dip"
        android:text="Reward Item"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_set_reward_point"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_change_password"
        android:layout_width="329dp"
        android:layout_height="81dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/card_green_3"
        android:drawableLeft="@drawable/vpn_key_24px"
        android:paddingLeft="30dip"
        android:paddingRight="26dip"
        android:text="Change Password"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_question_setting"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_exit_app"
        android:layout_width="329dp"
        android:layout_height="81dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/card_red"
        android:onClick="QuitApp"
        android:drawableLeft="@drawable/exit_to_app_24px"
        android:paddingLeft="30dip"
        android:paddingRight="26dip"
        android:text="Exit app"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_change_password"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>